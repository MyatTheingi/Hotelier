<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/inner_margin_bottom">

    <CheckBox
        android:id="@+id/cb_assign_calendar"
        android:layout_width="@dimen/AC_small_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:theme="@style/MyCheckbox" />

    <TextView
        android:id="@+id/txtAC_id"
        android:layout_width="@dimen/AC_small_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="233"

        android:textSize="@dimen/inner_text_size" />

    <TextView
        android:id="@+id/txtAC_name"
        android:layout_width="@dimen/AC_large_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="R003"
        android:gravity="center_horizontal"
        android:textSize="@dimen/inner_text_size" />

    <TextView
        android:id="@+id/txtAC_type"
        android:layout_width="@dimen/AC_medium_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Queen"
        android:gravity="center_horizontal"
        android:textSize="@dimen/inner_text_size" />

    <TextView
        android:id="@+id/txtAC_from"
        android:layout_width="@dimen/AC_medium_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Second"
        android:gravity="center_horizontal"
        android:textSize="@dimen/inner_text_size" />

    <TextView
        android:id="@+id/txtAC_to"
        android:layout_width="@dimen/AC_medium_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Active"
        android:gravity="center_horizontal"
        android:textSize="@dimen/inner_text_size" />

    <TextView
        android:id="@+id/txtAC_price"
        android:layout_width="@dimen/AC_medium_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Active"
        android:gravity="center_horizontal"
        android:textSize="@dimen/inner_text_size" />

    <ImageView
        android:id="@+id/btnAC_edit"
        android:layout_width="@dimen/AC_medium_width"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="@dimen/inner_item_padding"
        android:src="@drawable/png_btn_edit" />

    <ImageView
        android:id="@+id/btnAC_delete"
        android:layout_width="@dimen/AC_medium_width"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:padding="@dimen/inner_item_padding"
        android:src="@drawable/png_btn_delete" />
</LinearLayout>