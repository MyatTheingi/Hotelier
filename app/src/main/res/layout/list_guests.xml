<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/inner_margin_bottom">

    <CheckBox
        android:id="@+id/cb_guests"
        android:layout_width="@dimen/G_small_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:theme="@style/MyCheckbox"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtG_id"
        android:layout_width="@dimen/G_small_width"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="@dimen/inner_item_padding"
        android:text="1"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/txtG_name"
        android:layout_width="@dimen/G_large_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Mg Mg"
        android:textAlignment="textStart"
        android:textSize="@dimen/normal_text_size"
        android:gravity="start" />

    <TextView
        android:id="@+id/txtG_nrc"
        android:layout_width="@dimen/G_large_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="7/PaMaNa(N)211931"
        android:gravity="center_horizontal"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:inputType="number"
        android:id="@+id/txtG_ph"
        android:layout_width="@dimen/G_large_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="09-454457120"
        android:gravity="center_horizontal"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/txtG_email"
        android:layout_width="@dimen/G_extralarge_width"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="@dimen/inner_item_padding"
        android:text="mgmg@gmail.com"
        android:textAlignment="textStart"
        android:textSize="@dimen/normal_text_size"
        android:gravity="start" />

    <TextView
        android:id="@+id/txtG_address"
        android:layout_width="@dimen/G_medium_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Pyay"
        android:gravity="center_horizontal"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/txt_country_name"
        android:layout_width="@dimen/G_medium_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/inner_item_padding"
        android:text="Myanmar"
        android:gravity="center_horizontal"
        android:textSize="@dimen/normal_text_size" />

    <ImageView
        android:id="@+id/btnG_make_reservation"
        android:layout_width="@dimen/G_large_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/png_btn_make_reservation" />

    <ImageView
        android:id="@+id/btnG_edit"
        android:layout_width="@dimen/G_medium_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/inner_item_padding"
        android:src="@drawable/png_btn_edit" />

    <ImageView
        android:id="@+id/btnG_delete"
        android:layout_width="@dimen/G_medium_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/inner_item_padding"
        android:src="@drawable/png_btn_delete" />
</LinearLayout>